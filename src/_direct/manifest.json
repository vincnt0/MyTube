{
  "manifest_version": 2,
  "name": "MyTube",
  "version": "0.1",
  "author": "vincnt0",
  "icons": {
    "128": "icons/128.png",
    "48": "icons/48.png",
    "16": "icons/16.png"
  },
  "options_page": "options.html",
  "browser_action":{
    "default_title": "MyTube",
    "default_icon": "icons/16.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },

  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "run_at": "document_end",
      "js": ["content.js"]
    }
  ],

  "permissions": [
    "tabs",
    "contextMenus",
    "webRequest",
    "webRequestBlocking",
    "storage",
    "https://www.youtube.com/*"
  ]

}