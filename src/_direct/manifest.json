{
  "manifest_version": 3,
  "name": "MyTube",
  "version": "0.3",
  "author": "vincnt0",
  "icons": {
    "128": "icons/128.png",
    "48": "icons/48.png",
    "16": "icons/16.png"
  },
  "options_page": "options.html",
  "action":{
    "default_title": "MyTube",
    "default_icon": "icons/16.png",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "run_at": "document_end",
      "js": ["content.js"]
    }
  ],
  "host_permissions": [
    "https://www.youtube.com/*"
  ],
  "permissions": [
    "tabs",
    "contextMenus",
    "webRequest",
    "webRequestBlocking",
    "storage"
  ]

}